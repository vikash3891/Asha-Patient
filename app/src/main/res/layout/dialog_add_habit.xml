<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50dp"
        android:background="@color/gridItemBackgroundGredientDark">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/add_habit"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_19" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:background="@drawable/edittext_border">

        <Spinner
            android:id="@+id/spinnerHabit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:tooltipText="@string/select" />
    </LinearLayout>

    <!--Smoking-->
    <LinearLayout
        android:id="@+id/layoutSmoking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_20"
        android:gravity="start|center"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/radioGroupHabit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:layout_weight="4"
            android:gravity="start|center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/habitYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_3"
                android:text="Yes"
                android:textSize="@dimen/sp_16" />

            <RadioButton
                android:id="@+id/habitNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:checked="true"
                android:padding="@dimen/dp_3"
                android:text="No"
                android:textSize="@dimen/sp_16" />
        </RadioGroup>

        <EditText
            android:id="@+id/habitFrequency"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_weight="2"
            android:background="@drawable/edittext_border"
            android:cursorVisible="true"
            android:gravity="start|center"
            android:hint=" Per Day"
            android:inputType="number"
            android:maxLength="2"
            android:maxLines="1"
            android:padding="@dimen/dp_2"
            android:paddingStart="@dimen/dp_4"
            android:textSize="@dimen/sp_16"
            android:visibility="gone" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:paddingStart="@dimen/dp_15"
            android:paddingTop="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_5"
            android:text="Cancel"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_16"
            android:visibility="gone" />

        <TextView
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_5"
            android:padding="@dimen/dp_10"
            android:text="@string/submit"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_20" />
    </RelativeLayout>

</LinearLayout>