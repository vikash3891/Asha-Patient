<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50dp"
        android:paddingStart="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_10">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/quicksand_medium"
            android:gravity="center"
            android:padding="@dimen/dp_5"
            android:text="@string/add_habit"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/sp_17"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:orientation="vertical">

        <EditText
            android:id="@+id/habitName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_weight="2"
            android:background="@drawable/edittext_border"
            android:cursorVisible="true"
            android:fontFamily="@font/quicksand_medium"
            android:gravity="start|center"
            android:hint="Habit Name"
            android:inputType="number"
            android:maxLength="3"
            android:padding="@dimen/dp_2"
            android:paddingStart="@dimen/dp_10"
            android:textSize="@dimen/sp_16" />

        <EditText
            android:id="@+id/habitFrequency"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_weight="2"
            android:background="@drawable/edittext_border"
            android:cursorVisible="true"
            android:fontFamily="@font/quicksand_medium"
            android:gravity="start|center"
            android:hint="Habit Frequency"
            android:inputType="number"
            android:maxLength="3"
            android:padding="@dimen/dp_2"
            android:paddingStart="@dimen/dp_10"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

    <!--Smoking-->
    <LinearLayout
        android:id="@+id/layoutSmoking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_20"
        android:gravity="start|center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/quicksand_medium"
            android:gravity="center"
            android:padding="@dimen/dp_5"
            android:text="@string/frequency_unit"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_17" />

        <RadioGroup
            android:id="@+id/radioGroupHabit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:layout_weight="4"
            android:gravity="start|center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/habitDaily"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_medium"
                android:padding="@dimen/dp_3"
                android:text="Daily"
                android:textSize="@dimen/sp_16" />

            <RadioButton
                android:id="@+id/habitWeekly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:checked="true"
                android:fontFamily="@font/quicksand_medium"
                android:padding="@dimen/dp_3"
                android:text="Weekly"
                android:textSize="@dimen/sp_16" />

            <RadioButton
                android:id="@+id/habitMonthly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:checked="true"
                android:fontFamily="@font/quicksand_medium"
                android:padding="@dimen/dp_3"
                android:text="Monthly"
                android:textSize="@dimen/sp_16" />
        </RadioGroup>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/quicksand_medium"
            android:paddingStart="@dimen/dp_15"
            android:paddingTop="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_5"
            android:text="@string/cancel"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_16"
            android:visibility="gone" />

        <TextView
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@color/gridItemBackgroundGredientDark"
            android:fontFamily="@font/quicksand_medium"
            android:gravity="center"
            android:paddingStart="@dimen/dp_15"
            android:paddingTop="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_5"
            android:text="@string/submit"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>

</LinearLayout>